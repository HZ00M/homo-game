FROM openjdk:8
MAINTAINER chabi

RUN mkdir /opt/settings
RUN rm -rf /etc/localtime && \
ln -s /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
echo "Asia/Shanghai" > /etc/timezone && \
echo "apollo.meta=http://192.168.10.142:28080\nidc=default" >> /opt/settings/server.properties

COPY tpf-build-rpc-1.0.0.11.jar /home/tpf-build-server/app.jar
WORKDIR /home/tpf-build-server/

